/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
	"compileOnSave": false,
	"compilerOptions": {
		"strict": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "ES2022",
		"module": "preserve",
		// "typeRoots": [
		// 	"node_modules/@types"
		// ],
		"paths": {
			"@mahindar5/common-lib": [
				"../common-lib/dist/"
			],
			"@mahindar5/ng-common-mat-lib/*": [
				"../ng-mat-app/dist/ng-common-mat-lib/*"
			],
			"@mahindar5/ng-common-mat-lib": [
				"../ng-mat-app/dist/ng-common-mat-lib"
			],
			"@mahindar5/ng-common-lib/*": [
				"../ng-mat-app/dist/ng-common-lib/*"
			],
			"@mahindar5/ng-common-lib": [
				"../ng-mat-app/dist/ng-common-lib"
			],
			// "@mahindar5/common-lib": [
			// 	"../common-lib/src/"
			// ],
			// "@mahindar5/ng-common-mat-lib/*": [
			// 	"../ng-mat-app/projects/ng-common-mat-lib/*"
			// ],
			// "@mahindar5/ng-common-mat-lib": [
			// 	"../ng-mat-app/projects/ng-common-mat-lib/src"
			// ],
		},
	},
	"angularCompilerOptions": {
		"enableI18nLegacyMessageIdFormat": false,
		"strictInjectionParameters": true,
		"strictInputAccessModifiers": true,
		"typeCheckHostBindings": true,
		"strictTemplates": true
	},
	"files": [],
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.spec.json"
		}
	]
}
